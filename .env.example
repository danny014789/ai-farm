# Anthropic API key (get from https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-...

# Telegram bot token (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...

# Your Telegram chat ID (get by messaging @userinfobot)
TELEGRAM_CHAT_ID=123456789

# Path to farmctl.py on the Raspberry Pi
FARMCTL_PATH=/home/pi/plant-ops/farmctl.py

# Serial port for Arduino
SERIAL_PORT=/dev/ttyACM0

# Claude model to use (sonnet is best cost/quality balance)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Data directory for logs and cached knowledge
DATA_DIR=/home/pi/plant-ops-ai/data

# Agent mode: "live" executes actions, "dry-run" only logs recommendations
AGENT_MODE=dry-run
